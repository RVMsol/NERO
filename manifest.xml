<?xml version="1.0" encoding="utf-8"?>
<!-- 
NERO PHISHING REPORT MANIFEST 
Version: 3.8 - RIBBON BUTTON (CONSERVATIVE SCHEMA)
Date: 2025-06-21
Changes: Simplified VersionOverrides for better validation
- Used minimal ribbon button structure
- Conservative namespace approach
- Focuses on compatibility over features
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="MailApp">
  <Id>a1b2c3d4-e5f6-7890-abcd-123456789012</Id>
  <Version>3.8.0.0</Version>
  <ProviderName>Nero Consulting</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="NERO PhishAlert"/>
  <Description DefaultValue="Report suspicious emails to security team"/>
  <IconUrl DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-64.png"/>
  <SupportUrl DefaultValue="https://rvmsol.github.io/NERO"/>
  <AppDomains>
    <AppDomain>https://rvmsol.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rvmsol.github.io/NERO/phishing-report.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <Sets DefaultMinVersion="1.1" xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="phishingGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="phishingButton">
                  <Label resid="ButtonLabel"/>
                  <Supertip>
                    <Title resid="ButtonLabel"/>
                    <Description resid="ButtonTooltip"/>
                  </Supertip>
                  <Icon>
                    <Image size="16" resid="Icon16" xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0"/>
                    <Image size="32" resid="Icon32" xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0"/>
                    <Image size="80" resid="Icon80" xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>phishingTaskpane</TaskpaneId>
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <Images xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <Image id="Icon16" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-16.png"/>
        <Image id="Icon32" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-32.png"/>
        <Image id="Icon80" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-80.png"/>
      </Images>
      
      <Urls xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <Url id="Commands.Url" DefaultValue="https://rvmsol.github.io/NERO/commands.html"/>
        <Url id="TaskpaneUrl" DefaultValue="https://rvmsol.github.io/NERO/phishing-report.html"/>
      </Urls>
      
      <ShortStrings xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <String id="GroupLabel" DefaultValue="Security"/>
        <String id="ButtonLabel" DefaultValue="Report Phishing"/>
      </ShortStrings>
      
      <LongStrings xmlns="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <String id="ButtonTooltip" DefaultValue="Report this email as phishing"/>
      </LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

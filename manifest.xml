<?xml version="1.0" encoding="utf-8"?>
<!-- 
NERO PHISHING REPORT MANIFEST 
Version: 3.6 - RIBBON BUTTON
Date: 2025-06-21
Changes: Added VersionOverrides for ribbon button functionality
- Added ribbon button that appears in email toolbar
- Keeps taskpane functionality 
- Now appears in both add-ins menu AND email toolbar
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="MailApp">
  <Id>a1b2c3d4-e5f6-7890-abcd-123456789012</Id>
  <Version>3.6.0.0</Version>
  <ProviderName>Nero Consulting</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="NERO PhishAlert"/>
  <Description DefaultValue="Report suspicious emails to security team"/>
  <IconUrl DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-64.png"/>
  <SupportUrl DefaultValue="https://rvmsol.github.io/NERO"/>
  <AppDomains>
    <AppDomain>https://rvmsol.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rvmsol.github.io/NERO/phishing-report.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
        
        <MobileFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
            <Control xsi:type="MobileButton" id="msgReadOpenPaneMobileButton">
              <Label resid="TaskpaneButton.Label"/>
              <Icon xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
                <bt:Image size="25" resid="Icon.25x25"/>
                <bt:Image size="32" resid="Icon.32x32"/>
                <bt:Image size="48" resid="Icon.48x48"/>
              </Icon>
              <Action xsi:type="ShowTaskpane">
                <TaskpaneId>ButtonId1</TaskpaneId>
                <SourceLocation resid="Taskpane.Url"/>
              </Action>
            </Control>
          </ExtensionPoint>
        </MobileFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Image id="Icon.16x16" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-16.png"/>
        <bt:Image id="Icon.25x25" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-25.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-32.png"/>
        <bt:Image id="Icon.48x48" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-48.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://rvmsol.github.io/NERO/assets/phishing-icon-80.png"/>
      </bt:Images>
      
      <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:Url id="Commands.Url" DefaultValue="https://rvmsol.github.io/NERO/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://rvmsol.github.io/NERO/phishing-report.html"/>
      </bt:Urls>
      
      <bt:ShortStrings xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:String id="GroupLabel" DefaultValue="Security"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Report Phishing"/>
      </bt:ShortStrings>
      
      <bt:LongStrings xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0">
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Report this email as phishing"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
